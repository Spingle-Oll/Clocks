        methods: {
          getFullName: function() {
            console.log('getFullName Method');
            return this.first_name.toUpperCase() + ' ' + this.last_name;
          }
         
        
        },
        computed: {
          fullName: {
            get: function() {
              return this.first_name.toUpperCase() + ' ' + this.last_name;
            },
         
          }
        }
       
    })
